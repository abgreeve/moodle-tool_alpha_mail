{{< core/popover_region }}
    {{$attributes}}id="alpha-mail-popover-container"{{/attributes}}
    {{$togglelabel}}{{#str}} showmessages, tool_alpha_mail {{/str}}{{/togglelabel}}
    {{$togglecontent}}
        {{#pix}} i/notifications, tool_alpha_mail, {{#str}} togglenotificationmenu, message {{/str}} {{/pix}}
    {{/togglecontent}}

    {{$headertext}}{{#str}} alphamailmessages, tool_alpha_mail {{/str}}{{/headertext}}

    {{$content}}
        <div class="all-notifications">{{#messages}} {{!-- Must be on the same line or core's CSS rules don't work. --}}
             <div class="content-item-container notification">
                 <div class="content-item-body">
                     <div class="notification-message">{{body}}</div>
                  </div>
             </div>
        {{/messages}}
        </div>
        <div class="empty-message">{{#str}} nonotifications, message {{/str}}</div>
    {{/content}}
{{/ core/popover_region }}
{{#js}}
    require(['jquery', 'core/popover_region_controller'], function($, PopoverController) {
        var AlphaMailPopoverController = function(root) {
            PopoverController.call(this, root);
            this.root = root;
        };

        AlphaMailPopoverController.prototype = Object.create(PopoverController.prototype);
        AlphaMailPopoverController.prototype.constructor = AlphaMailPopoverController;

        new AlphaMailPopoverController($('#alpha-mail-popover-container'));
    });
{{/js}}
